<local:WidgetBase x:Class="Openhab.UWP.Controls.SliderWidget"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:local="using:Openhab.UWP.Controls"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  mc:Ignorable="d">

    <Grid Margin="8, 4, 8, 4" Background="{StaticResource OpenHABLightGreyBrush}">
        <local:ImageLabel IconPath="{x:Bind Widget.IconPath, Mode=OneWay}" LabelText="{x:Bind Widget.Label, Mode=OneWay}" />
        <Slider Width="200"
                HorizontalAlignment="Right"
                Value="{x:Bind Widget.Item.State}" />
    </Grid>
</local:WidgetBase>
